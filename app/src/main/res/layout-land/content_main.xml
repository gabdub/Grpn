                android:layout_height="wrap_content"
                android:backgroundTint="#FFF3E0"
                android:minWidth="80dip"
                android:minHeight="40dip"
                android:text="+/-" />

            <Button
                android:id="@+id/bDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
